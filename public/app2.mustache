<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>OIDC Demo Application</title>
    <link href="/assets/css/semantic-ui/semantic.min.css" type="text/css" rel="stylesheet"/>
    <base href="/"/>
  </head>

  <body>
    <div id="app-container" ></div>
    <script src="/assets/app2.js"></script>
    <script>
     var options = {
       container: '#app-container',
       oktaUrl: '{{{config.oidc.oktaUrl}}}',
       asId: '{{{config.oidc.asId}}}',
       clientId: '{{config.oidc.clientId}}',
       redirectUri: '{{{config.oidc.redirectUri}}}',
       {{#idToken}}
       idToken: '{{{idToken}}}',
       {{/idToken}}
     };
     app2.bootstrap(options);
    </script>
  </body>
</html>
